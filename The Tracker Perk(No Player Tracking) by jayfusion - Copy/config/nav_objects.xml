<configs>

	<append xpath="/nav_object_classes">
		<nav_object_class name="zombies">
			<property name="requirement_type" value="Tracking" />
			
			<map_settings>
				<property name="sprite_name" value="ui_game_symbol_zombie"/>
				<property name="min_distance" value="0"/>
				<property name="max_distance" value="-1"/>
				<property name="color" value="255,0,0,255"/>
				<property name="has_pulse" value="true"/>
			</map_settings>

			<compass_settings>
				<property name="sprite_name" value="ui_game_symbol_zombie"/>
				<property name="min_distance" value="0"/>
				<property name="max_scale_distance" value="1024"/>
				<property name="color" value="255,0,0,255"/>
				<property name="has_pulse" value="true"/>
				<property name="icon_clamped" value="false" />
			</compass_settings>

			<onscreen_settings>
				<property name="sprite_name" value="ui_game_symbol_zombie"/>
				<property name="min_distance" value="0"/>
				<property name="max_distance" value="25"/>
				<property name="color" value="255,0,0,255"/>
				<property name="has_pulse" value="true"/>
				<property name="show_distance" value="true"/>
				<property name="offset" value="0,1,0" />
			</onscreen_settings>
		</nav_object_class>

		<nav_object_class name="bosszombies">
			<property name="requirement_type" value="Tracking" />
			
			<map_settings>
				<property name="sprite_name" value="ui_game_symbol_zombie"/>
				<property name="min_distance" value="0"/>
				<property name="max_distance" value="-1"/>
				<property name="color" value="255,255,0,255"/>
				<property name="has_pulse" value="true"/>
			</map_settings>

			<compass_settings>
				<property name="sprite_name" value="ui_game_symbol_zombie"/>
				<property name="min_distance" value="0"/>
				<property name="max_scale_distance" value="1024"/>
				<property name="color" value="255,255,0,255"/>
				<property name="has_pulse" value="true"/>
				<property name="icon_clamped" value="false" />
			</compass_settings>

			<onscreen_settings>
				<property name="sprite_name" value="ui_game_symbol_zombie"/>
				<property name="min_distance" value="0"/>
				<property name="max_distance" value="25"/>
				<property name="color" value="255,255,0,255"/>
				<property name="has_pulse" value="true"/>
				<property name="show_distance" value="true"/>
				<property name="offset" value="0,1,0" />
			</onscreen_settings>
		</nav_object_class>		
 	</append>

	<set xpath="/nav_object_classes/nav_object_class[@name='animaltracking_timid']">
			<property name="requirement_type" value="Tracking" />
			<property name="use_override_icon" value="true" />

			<map_settings>
				<property name="sprite_name" value="ui_game_symbol_animal_tracker"/>
				<property name="min_distance" value="0"/>
				<property name="max_distance" value="-1"/>
				<property name="color" value="0,255,0,255"/>
				<property name="has_pulse" value="true"/>
			</map_settings>

			<compass_settings>
				<property name="sprite_name" value="ui_game_symbol_animal_tracker"/>
				<property name="min_distance" value="0"/>
				<property name="max_scale_distance" value="1024"/>
				<property name="color" value="0,255,0,255"/>
				<property name="has_pulse" value="true"/>
				<property name="icon_clamped" value="false" />
			</compass_settings>

			<onscreen_settings>
				<property name="sprite_name" value="ui_game_symbol_animal_tracker"/>
				<property name="min_distance" value="0"/>
				<property name="max_distance" value="25"/>
				<property name="color" value="0,255,0,255"/>
				<property name="has_pulse" value="false"/>
				<property name="show_distance" value="true"/>
				<property name="offset" value="0,0,0" />
			</onscreen_settings>
	</set>

</configs>