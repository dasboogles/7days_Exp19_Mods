<config>

<append xpath="/ui_display_info/item_display/item_display_info[@display_type='rangedBow']">
			<display_entry name="BurstRoundCount" title_key="Arrows Per Shot"/>
			<display_entry name="MagazineSize" title_key="statMagazineSize"/>
</append>

<append xpath="/ui_display_info/item_display/item_display_info[contains(@display_type,'armor')]">
			<display_entry name="HealthMax" title_key="Health Plus (-100)"/>
</append>
		
<append xpath="/ui_display_info/item_display/item_display_info[@display_type='clothingCigar']">
			<display_entry name="AttributeLevel" tags="attPerception" title_key="statShowPerception" display_leading_plus="true"/>
			<display_entry name="AttributeLevel" tags="attFortitude" title_key="statShowFortitude" display_leading_plus="true"/>
			<display_entry name="AttributeLevel" tags="attAgility" title_key="statShowAgility" display_leading_plus="true"/>
			<display_entry name="AttributeLevel" tags="attIntellect" title_key="statShowIntellect" display_leading_plus="true"/>
</append>

</config>